<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.saraqi.adventure.Game1">

    <ImageView
        android:id="@+id/intro_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/game1background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/lightbulb"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="hint"/>

    <TextView
        android:id="@+id/round_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game1_round1"
        android:gravity="center_horizontal"
        android:fontFamily="serif"
        android:layout_marginTop="30dp"
        android:paddingBottom="40dp"
        android:textSize="50sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <ImageButton
        android:id="@+id/fries1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/normalfries"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toLeftOf="@+id/fries2"
        app:layout_constraintTop_toBottomOf="@+id/round_title"
        android:onClick="button" />

    <ImageButton
        android:id="@+id/fries2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/normalfries"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/round_title"
        android:onClick="button"/>

    <ImageButton
        android:id="@+id/fries3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/normalfries"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@+id/fries2"
        app:layout_constraintTop_toBottomOf="@+id/round_title"
        android:onClick="button"/>

    <ImageButton
        android:id="@+id/fries4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/normalfries"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toLeftOf="@+id/fries5"
        app:layout_constraintTop_toBottomOf="@+id/fries1"
        android:onClick="button"/>

    <ImageButton
        android:id="@+id/fries5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/normalfries"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/fries2"
        android:onClick="button"/>

    <ImageButton
        android:id="@+id/fries6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/normalfries"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@+id/fries2"
        app:layout_constraintTop_toBottomOf="@+id/fries3"
        android:onClick="button"/>

    <ImageButton
        android:id="@+id/fries7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/normalfries"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toLeftOf="@+id/fries8"
        app:layout_constraintTop_toBottomOf="@+id/fries4"
        android:onClick="button"/>

    <ImageButton
        android:id="@+id/fries8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/normalfries"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/fries5"
        android:onClick="button"/>

    <ImageButton
        android:id="@+id/fries9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/normalfries"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@+id/fries8"
        app:layout_constraintTop_toBottomOf="@+id/fries6"
        android:onClick="button"/>

    <TextView
        android:id="@+id/hint_window"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/game3hint"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp" />

    <ImageView
        android:id="@+id/close_hint"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/xmark"
        app:layout_constraintTop_toTopOf="@+id/hint_window"
        app:layout_constraintRight_toRightOf="@+id/hint_window"
        android:layout_margin="10dp"
        android:onClick="closeWindow"/>

    <TextView
        android:id="@+id/hint"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/hint_neutral"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/hint_window"
        app:layout_constraintBottom_toBottomOf="@+id/hint_window"
        app:layout_constraintLeft_toLeftOf="@+id/hint_window"
        app:layout_constraintRight_toRightOf="@+id/hint_window"
        />


    <TextView
        android:id="@+id/wrong_screen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="WRONG"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="@android:color/black"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/correct_screen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="CORRECT"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:background="@android:color/black"
        android:textColor="@android:color/holo_green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="startNextRound"
        />

    <TextView
        android:id="@+id/correct_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="(Tap to Continue)"
        android:textSize="16sp"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/holo_green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="startNextRound"/>


</android.support.constraint.ConstraintLayout>
